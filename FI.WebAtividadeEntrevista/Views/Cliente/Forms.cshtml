@model WebAtividadeEntrevista.Models.ClienteModel


<form id="formCadastro" method="post">
    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-primary" })
        <div class="col-md-6">
            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-primary" })
            </div>
        </div>
   
        <div class="col-md-6">
            <div class="form-group">
                <label for="Sobrenome">Sobrenome:</label>
                <input required="required" type="text" class="form-control" id="Sobrenome" name="Sobrenome" placeholder="Ex.: da Silva" maxlength="255">
                @Html.ValidationMessageFor(model => model.Sobrenome,"", new { @class = "text-primary" })
            </div>
        </div>
    </div>
    <div class="row">
        @*<div class="col-md-6">
            <div class="form-group">
                <label for="CPF">CPF:</label>
                <input required="required" type="text" class="form-control cpf" id="CPF" name="CPF" placeholder="Ex.: 010.011.111-00" maxlength="15">
                @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-primary" })
            </div>
        </div>*@
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.CPF, htmlAttributes: new { })
                @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ex.: 010.011.111-00" } })
                @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-primary" })
            </div>
        </div>


        <div class="col-md-6">
            <div class="form-group">
                <label for="Nacionalidade">Nacionalidade:</label>
                <input required="required" type="text" class="form-control" id="Nacionalidade" name="Nacionalidade" placeholder="Ex.: brasileira" maxlength="50">
                @Html.ValidationMessageFor(model => model.Nacionalidade, "", new { @class = "text-primary" })
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="CEP">CEP:</label>
                <input required="required" type="text" class="form-control" id="CEP" name="CEP" placeholder="Ex.: 01011-100" maxlength="9">
                @Html.ValidationMessageFor(model => model.CEP, "", new { @class = "text-primary" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Estado">Estado:</label>
                <select required="required" id="Estado" class="form-control" name="Estado">
                    <option value="">Selecione</option>
                    <option value="SP">São Paulo</option>
                    <option value="PE">Pernambuco</option>
                </select>
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-primary" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="Cidade">Cidade:</label>
                <input required="required" type="text" class="form-control" id="Cidade" name="Cidade" maxlength="50" placeholder="Ex.: São Paulo">
                @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-primary" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="Logradouro">Logradouro:</label>
                <input required="required" type="text" class="form-control" id="Logradouro" name="Logradouro" placeholder="Ex.: Rua Boa Vista 253" maxlength="500">
                @Html.ValidationMessageFor(model => model.Logradouro, "", new { @class = "text-primary" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Email">E-mail:</label>
                <input required="required" type="text" class="form-control" id="Email" name="Email" placeholder="Ex.: email@email.com" maxlength="2079">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-primary" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Telefone">Telefone:</label>
                <input required="required" type="tel" class="form-control" id="Telefone" name="Telefone" placeholder="Ex.: (11) 2020-3030" maxlength="15">
                @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-primary" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="pull-left">
                <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#modalBeneficiarios">Beneficiarios</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-success">Salvar</button>
                @Html.ActionLink("Voltar", "Index", "Cliente", new { }, new { @class = "btn btn-sm btn-danger" })
            </div>
        </div>
    </div>

</form>

@{
    Html.RenderPartial("~/Views/Beneficiario/Adicionar.cshtml", new WebAtividadeEntrevista.Models.BeneficiarioModel());
}


