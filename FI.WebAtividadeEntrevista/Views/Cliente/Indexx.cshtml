@section scripts{
    <script>
        $(document).ready(function () {
            loadData();

        });
    </script>
    @Scripts.Render("~/bundles/Beneficiarios")
    @Scripts.Render("~/bundles/vCpf")


}
@{
    ViewBag.Title = "Beneficiários";
}

<div id="modalBeneficiario" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="ModalLabel">Beneficiários</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
               
                <div class="container">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="CPFB">CPF:</label>
                                <input type="text" class="form-control" id="CPFBB" name="CPFB" placeholder="Somente números" onkeypress=" EntradaNumerico(event); mascara(this, cpf); " maxlength="14">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-inline">
                                <label for="NomeB">Nome:</label>
                                <input type="text" class="form-control" id="NomeB" name="NomeB" placeholder="Ex.: Maria" maxlength="50">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-inline">
                                <button type="button" class="btn btn-success pull-right" style="margin-top: 26px;" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Incluir</button><br /><br />
                                

                            </div>
                        </div>
                    </div>
                    <table class="table table-responsive table-hover">
                        <thead>
                            <tr>
                                <th style="display: none;">
                                    ID
                                </th>
                                <th>
                                    CPF
                                </th>
                                <th>
                                    Nome
                                </th>

                                <th style="display: none;">
                                    IdCliente
                                </th>

                            </tr>
                        </thead>
                        <tbody class="tbody"></tbody>
                    </table>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>

            </div>

        </div><!-- /.modal-content -->

    </div><!-- /.modal-dialog -->
</div> <!-- /.modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Beneficiário</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="IdA" style="display: none;">ID</label>
                        <input type="text" class="form-control" id="IDA" placeholder="IdA" disabled="disabled" style="display: none;" />
                    </div>

                    <div class="form-group">
                        <label for="CPFA">CPF</label>
                        <input type="text" class="form-control" id="CPFA" placeholder="CPF" onkeypress=" EntradaNumerico(event); mascara(this, cpf); "/>
                    </div>
                    <div class="form-group">
                        <label for="NomeA">Nome</label>
                        <input type="text" class="form-control" id="NomeA" placeholder="Nome" />
                    </div>
                    <div class="form-group">
                        <label for="IdClienteA" style="display: none;">IdCliente</label>
                        <input type="text" class="form-control" style="display: none;" id="IdClienteA" placeholder="IdCliente" value="$("#formCadastro #ID").value"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnAdd" onclick="return Add();">Incluir</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Atualizar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
